pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker { image 'openjdk:11' }
            }
            steps {
                // Navigate to the application directory and compile the Java application
                sh 'javac HelloWorld.java'
            }
        }
        stage('Run') {
            agent {
                docker { image 'openjdk:11' }
            }
            steps {
                // Navigate to the application directory and run the Java application
                sh 'java HelloWorld'
            }
        }
    }
}
